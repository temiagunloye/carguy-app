rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // USER CAR PHOTOS
    // Users can read/write their own car photos
    match /users/{userId}/cars/{carId}/photos/{photoFile} {
      allow read: if true; // Public read for 3D reconstruction providers
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // USER CAR MODELS
    // Users can read their own models, only Cloud Functions can write
    match /users/{userId}/cars/{carId}/models/{modelFile} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only Cloud Functions can write models
    }
    
    // MODELS DIRECTORY (used by Cloud Functions)
    // Public read for 3D viewer, only Cloud Functions can write
    match /models/{userId}/{jobId}/{modelFile} {
      allow read: if true; // Public read so WebView can load models
      allow write: if false; // Only Cloud Functions can write
    }
    
    // BASE MODELS - PUBLIC READ ONLY
    // Public 3D base models (demo cars, etc)
    match /models/base/{allPaths=**} {
      allow read: if true; // Public read for all users
      allow write: if false; // Only admins via Firebase Console
    }
    
    // STANDARD DEALER CARS - PUBLIC ASSETS
    // All authenticated users can read, only admins can write
    match /public/standardCars/{standardCarId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // STANDARD DEALER CARS - ARCHIVE (videos, originals)
    // Only admins can read/write (lifecycle policies will auto-delete old files)
    match /archive/standardCars/{standardCarId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
                            request.auth.token.admin == true;
    }
  }
}
